<Window x:Class="ScreenSaver.View.Windows.SplashScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vms="clr-namespace:ScreenSaver.ViewModel.ViewModels;assembly=ScreenSaver.ViewModel"
        xmlns:local="clr-namespace:ScreenSaver.View.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        d:DataContext="{d:DesignInstance Type=vms:SplashScreenViewModel}"
        Cursor="None"
        Top="{Binding Top}"
        Left="{Binding Left}"
        Width="{Binding Width}"
        Height="{Binding Height}"
        Background="Black"
        Title="SplashScreenWindow">
    <Grid>
        <Image Stretch="Fill"
               Source="{Binding Bitmap}"/>
    </Grid>
</Window>
